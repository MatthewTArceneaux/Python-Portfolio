#grade function 

import random

def calculate_average(numbers):
  return sum(numbers) / len(numbers)
#calculates my avg, by dividing the sum of all numbers
def letter_grade(grade):
    if grade >= 90:
        return "A"
    elif grade >= 80:
        return "B"
    elif grade >= 70:
        return "C"
    elif grade >= 60:
        return "D"
    else:
        return "F"
#If or elif staments are used if the condition is met (True or false)
numbers = []
for i in range(5):
  number =random. randint (50, 100)
  numbers.append(number)
  print(f"Grade {i+1}: {number}")
#This function returns my random number grades
average = calculate_average(numbers)
print("Average grade:", average, "(", letter_grade(average), ")")
  
